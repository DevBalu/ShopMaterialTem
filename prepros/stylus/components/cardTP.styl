.topProduct
	.container
		.row
			margin 0
			padding 40px
			.card
				.card-image
					display flex
					align-items center
					img
						max-width none
						width 100%
				.card-stacked
					border-left 1px solid #ccc
					.card-content
						padding 0 2px 2px 10px
						h4
							font-weight 200
						h5
							font-weight 300
						p
							font-size 20px
					.card-action
						padding 10px
						font-size 20px

@media screen and (max-width 600px)
	.topProduct
		.container
			.row
				margin 0
				padding 2px
				.card
					.card-image
						display flex
						align-items center
				.col
					padding 0