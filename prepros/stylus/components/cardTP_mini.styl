/*card Desktop parametres three section*/
.topProduct
	.tpSlideshow
		.row
			margin 0
			.card
				background-color rgba(255, 255, 255, .4	)
				margin 0
				.card-image
					height 200px
					display flex
					align-items center
					justify-content center
					.wrapimg
						width 100%
				.card-content
					a
						color #000
					.card-action
						color #fff
						padding 5px
				.card-reveal
					padding 7px
					p
						margin 2px 0
					h4
						margin 2px 0
						padding 2px 0
						font-size 20px
					h5
						margin 2px 0
						padding 2px 0
						font-size 20px
					i
						margin 2px 0
						padding 2px 0
						font-size 20px
