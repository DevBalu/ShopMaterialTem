/*card MOBILE parametres three section*/
@media screen and (max-width 600px)
	.topProduct
		.tpSlideshow
			.row
				margin 0
				.card
					margin 0
					.card-image
						display flex
						align-items center
						.wrapimg
							width 100%
					.card-content
						padding 5px
						h4
							color #000
							margin 0
							font-size 14px
							font-weight 400
						h5
							font-size 10px
							margin 2px
						i
							font-size 7px
						p
							font-size 7px