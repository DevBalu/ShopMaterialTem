.topProduct
    .carousel
        background #EEE
        height 200px
        .carousel-cell
            width 66%
            height 200px
            margin-right 10px
            background #ccc
            border-radius 5px
            counter-increment gallery-cell
            .carousel-cell:before
                display block
                text-align center
                content counter(gallery-cell)
                line-height 200px
                font-size 81px
                color white